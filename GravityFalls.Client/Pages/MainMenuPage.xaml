<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GravityFalls.Client.Pages.MainMenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Main Menu">

    <Grid StyleClass="parchment">
        <Image Source="wood_bg.png" Aspect="AspectFill" />

        <BoxView Opacity="0.10" BackgroundColor="Black" />

        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="18"
                                 HorizontalOptions="Center"
                                 MaximumWidthRequest="460">

                <!-- Логотип -->
                <Image Source="gravity_logo.png"
                       HeightRequest="90"
                       HorizontalOptions="Center"
                       Margin="0,14,0,4" />

                <Border Stroke="#B8935E"
                        StrokeThickness="3"
                        StrokeShape="RoundRectangle 18"
                        Background="#F6E7C6">
                    <Border.Shadow>
                        <Shadow Opacity="0.45" Radius="18" Offset="0,8"/>
                    </Border.Shadow>

                    <VerticalStackLayout  Padding="36" Spacing="16" WidthRequest="400">

                        <Label Text="Nickname" StyleClass="h2" />

                        <Border Stroke="#B8935E"
                                StrokeThickness="2"
                                StrokeShape="RoundRectangle 12"
                                BackgroundColor="#F9EFD6">
                            <Entry x:Name="NicknameEntry"
                                   TextColor="#2B1B12" PlaceholderColor="#7A5E3C" FontSize="16" Margin="12,10"
                                   Placeholder="Dipper" />
                        </Border>

                        <Label Text="Server" StyleClass="h2" />

                          <Border Stroke="#B8935E"
                                  StrokeThickness="2"
                                  StrokeShape="RoundRectangle 12"
                                  BackgroundColor="#F9EFD6">
                              <Entry x:Name="ServerEntry"
                                     TextColor="#2B1B12" PlaceholderColor="#7A5E3C" FontSize="16" Margin="12,10"
                                     Placeholder="127.0.0.1:8888" />
                          </Border>

                          <Label Text="Герой" StyleClass="h2" />
                          <Border Stroke="#B8935E" StrokeThickness="2" StrokeShape="RoundRectangle 12" BackgroundColor="#F9EFD6">
                              <Picker x:Name="HeroPicker"
                                      Margin="12,6"
                                      Title="Выбери персонажа"
                                      TitleColor="#7A5E3C"
                                      TextColor="#2B1B12" />
                          </Border>
                          <Label x:Name="HeroHint"
                                 Text="У каждого героя свои бонусы: выбери по вкусу."
                                 StyleClass="small-muted" />

                          <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            
                        </HorizontalStackLayout>
                        
                        <Button x:Name="RulesButton"
                                Text="Rules"
                                StyleClass="chip"
                                HorizontalOptions="Center"/>
                        
                        <Button x:Name="StartButton"
                                Text="PLAY"
                                FontAttributes="Bold"
                                FontSize="24"
                                HeightRequest="52"
                                CornerRadius="16"
                                TextColor="White"
                                BackgroundColor="#C85B23">
                            <Button.Shadow>
                                <Shadow Opacity="0.35" Radius="12" Offset="0,6" />
                            </Button.Shadow>
                        </Button>

                        

                        <Button  x:Name="ExitButton"
                                Text="EXIT"
                                FontAttributes="Bold"
                                FontSize="24"

                                HeightRequest="52"
                                CornerRadius="16"
                                TextColor="Black"
                                BackgroundColor="DarkGrey">
                            <Button.Shadow>
                                <Shadow Opacity="0.35" Radius="12" Offset="0,6" />
                            </Button.Shadow>
                        </Button>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
