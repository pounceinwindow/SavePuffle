<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GravityFalls.Client.Pages.CharacterSelectionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    Title="Lobby">

    <Grid StyleClass="parchment">
        <!-- Фон -->
        <Image Source="wood_bg.png" Aspect="AspectFill" />
        <BoxView Opacity="0.18" BackgroundColor="Black" />

        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="14"
                                 HorizontalOptions="Center"
                                 MaximumWidthRequest="900">

                <Border Stroke="#B8935E"
                        StrokeThickness="3"
                        StrokeShape="RoundRectangle 18"
                        Background="#F6E7C6">
                    <Border.Shadow>
                        <Shadow Opacity="0.45" Radius="18" Offset="0,8"/>
                    </Border.Shadow>

                    <Grid Padding="16" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="6">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="ТАИНСТВЕННОЕ ЛОББИ"
                               StyleClass="h1" />

                        <Border Grid.Row="1" Grid.Column="0"
                                Stroke="#B8935E"
                                StrokeThickness="2"
                                StrokeShape="RoundRectangle 14"
                                BackgroundColor="#E8C98A"
                                Padding="12,6">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="👥 4 игрока" TextColor="#2B1B12" FontAttributes="Bold"/>
                                <Label Text="•" TextColor="#2B1B12" Opacity="0.6"/>
                                <Label Text="PC - кооператив" TextColor="#2B1B12" FontAttributes="Bold"/>
                            </HorizontalStackLayout>
                        </Border>

                        <Button x:Name="BackButton"
                                Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                Text="Назад"
                                StyleClass="chip"
                                HorizontalOptions="End"
                                VerticalOptions="Center" />
                    </Grid>
                </Border>

                <Grid ColumnDefinitions="*,12,Auto" RowDefinitions="Auto">
                    <Border Grid.Column="0"
                            Stroke="#B8935E"
                            StrokeThickness="3"
                            StrokeShape="RoundRectangle 18"
                            Background="#F6E7C6">
                        <Border.Shadow>
                            <Shadow Opacity="0.35" Radius="16" Offset="0,6"/>
                        </Border.Shadow>

                        <VerticalStackLayout Padding="14" Spacing="8">
                            <Label Text="Сессия" StyleClass="h2" />
                            <Label Text="• TCP + XPacket" TextColor="#2B1B12" />
                            <Label Text="• Шифрование после handshake" TextColor="#2B1B12" />
                            <Label Text="• Сервер присылает список игроков" TextColor="#2B1B12" />
                            <Label Text="Заметка: ищем улики и не сливаемся 🙂" StyleClass="small-muted" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="2"
                            Stroke="#B8935E"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 14"
                            BackgroundColor="#E8C98A"
                            Padding="12,10"
                            VerticalOptions="Center">
                    </Border>
                </Grid>

                <Label Text="Игроки" FontSize="20" FontAttributes="Bold" TextColor="White" Margin="0,6,0,0" />

                <CollectionView x:Name="CarouselView">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#B8935E"
                                    StrokeThickness="3"
                                    StrokeShape="RoundRectangle 18"
                                    Background="#F6E7C6"
                                    Margin="0,6,0,0">
                                <Border.Shadow>
                                    <Shadow Opacity="0.25" Radius="12" Offset="0,5"/>
                                </Border.Shadow>

                                <Grid Padding="14"
                                      ColumnDefinitions="Auto,12,*,Auto"
                                      RowDefinitions="Auto,Auto"
                                      RowSpacing="6">

                                    <!-- индикатор статуса (просто декоративный, пока на строках) -->
                                    <Border Grid.RowSpan="2"
                                            Stroke="#B8935E"
                                            StrokeThickness="2"
                                            StrokeShape="RoundRectangle 999"
                                            BackgroundColor="#F9EFD6"
                                            HeightRequest="52"
                                            WidthRequest="52"
                                            VerticalOptions="Center">
                                        <Label Text="?"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="#2B1B12"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>

                                    <Label Grid.Column="2"
                                           Grid.Row="0"
                                           Text="{Binding .}"
                                           TextColor="#2B1B12"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           LineBreakMode="TailTruncation"/>

                                    <HorizontalStackLayout Grid.Column="2" Grid.Row="1" Spacing="8">
                                        <BoxView WidthRequest="10" HeightRequest="10" CornerRadius="5"
                                                 BackgroundColor="#2E7D32"
                                                 VerticalOptions="Center"/>
                                        <Label Text="Сервер будет обновлять состав/готовность."
                                               StyleClass="small-muted" />
                                    </HorizontalStackLayout>

                                    <Button Grid.Column="3"
                                            Grid.RowSpan="2"
                                            Text="…"
                                            StyleClass="chip"
                                            VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" Margin="0,10,0,8">
                    <Border Stroke="#B8935E"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 16"
                            BackgroundColor="#E8C98A"
                            Padding="14,10">
                        <Label Text="Confirm = готовность/старт (сервер решит)."
                               TextColor="#2B1B12"
                               FontAttributes="Bold"/>
                    </Border>

                    <Button x:Name="ConfirmButton"
                            Grid.Column="1"
                            Text="START"
                            StyleClass="primary">
                        <Button.Shadow>
                            <Shadow Opacity="0.35" Radius="12" Offset="0,6" />
                        </Button.Shadow>
                    </Button>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
